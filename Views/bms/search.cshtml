@model List<book>;

<body>
	<h1> Search Book Details </h1>
	<form method="post" asp-action="search">
		
		<div class="form-group">
			<label for="id">Book ID</label>
			<input type="number" name="id" placeholder="Enter ID for Search" />
		</div> <br><br />

		<div class="form-group">
			<input type="submit" class="btn-primary" value="Search" asp-controller="bms" asp-action="search" />
		</div>
	</form>

	@if (Model != null)
	{
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th> Id </th>
					<th> Title </th>
					<th> Price </th>
				</tr>
			</thead>

			@foreach(var item in Model)
			{

				<tr>
				<td> @item.Id </td>
				<td> @item.title </td>
				<td> @item.price </td>
				</tr>
			}
		</table>
	}
</body>